<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="v6.caique.ChatInfoFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/mainframe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/chat_dp"
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:onClick="ChooseDP" />

                <Button
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:paddingLeft="14dp"
                    android:drawableStart="@drawable/ic_fullscreen"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:onClick="ShowFullDP">
                </Button>

            </RelativeLayout>

            <EditText
                android:id="@+id/title_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.43"
                android:ems="10"
                android:inputType="textMultiLine"
                android:maxLength="32" />

            <LinearLayout
                android:id="@+id/tags"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.43"
                android:orientation="vertical"></LinearLayout>

            <Button
                android:id="@+id/update_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.43"
                android:onClick="UpdateChat"
                android:text="Update Chat" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>
