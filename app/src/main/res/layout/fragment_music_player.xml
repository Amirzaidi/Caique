<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="v6.caique.MusicPlayerFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/music_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editText2"
                android:layout_width="299dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.17"
                android:ems="10"
                android:hint="Music to add"
                android:inputType="text" />

            <Button
                android:id="@+id/button3"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="30dp"
                android:layout_height="34dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="30dp"
                android:layout_weight="0.33"
                android:background="@null"
                android:drawableTop="@drawable/ic_add_song"
                android:onClick="AddMusic"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="0.6">

            <TextView
                android:id="@+id/CurrentSong"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_gravity="bottom"
                android:layout_weight="0.6"
                android:text="" />

            <Button
                android:id="@+id/SkipButton"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_gravity="bottom"
                android:onClick="SkipSong"
                android:text="Skip" />

        </LinearLayout>

        <ListView
            android:id="@+id/SongQueue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />

        <ListView
            android:id="@+id/SongSelection"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:visibility="visible" />

    </LinearLayout>

</FrameLayout>
